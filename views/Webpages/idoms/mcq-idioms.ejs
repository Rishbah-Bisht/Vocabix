<%- include('../partial/html_header') %>

  <title>VocabiX - Home</title>
  <link rel="stylesheet" href="/home_page.css">
  <link rel="stylesheet" href="/nav_bar.css">
  </head>
  <style>
    .card {
      background: var(--color-white);
      padding: 2rem;
      border-radius: 16px;
      box-shadow: 0 6px 14px rgba(0, 0, 0, 0.1);
      max-width: 1200px;
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      text-align: left;
      margin: 4rem auto;
    }

    h2 {
      color: var(--color-primary);
      text-align: center;
        text-align: left;
      margin-bottom: 1.5rem;
    }

    .progress-container {
      text-align: center;
      margin-bottom: 1rem;
      font-weight: 600;
      color: var(--color-gray-700);
    }

    .score-indicator {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .score-box {
      padding: 0.5rem 1rem;
      border-radius: 8px;
      font-weight: 600;
    }

    .correct-score {
      background-color: #d4edda;
      color: #155724;
    }

    .wrong-score {
      background-color: #f8d7da;
      color: #721c24;
    }

    .word-display {
      font-size: 1.2rem;
      margin-bottom: 1.5rem;
      text-align: center;
      color: var(--color-gray-900);
    }

    .options-container {
      display: flex;
      width: 700px;
      flex-direction: column;
      gap: 0.8rem;
    }

    .option {
      border: 1px solid var(--color-gray-300);
      border-radius: 8px;
      padding: 0.8rem 1rem;
      cursor: pointer;
      transition: all 0.25s ease;
      background-color: var(--color-white);
    }

    .option:hover {
      background-color: var(--color-gray-100);
    }

    .option.correct-option {
      background-color: #d4edda;
      border-color: #28a745;
      color: #155724;
    }

    .option.wrong-option {
      background-color: #f8d7da;
      border-color: #dc3545;
      color: #721c24;
    }

    .feedback {
      text-align: center;
      font-weight: 600;
      margin-top: 1rem;
      padding: 0.8rem;
      border-radius: 8px;
      display: none;
    }

    .feedback.correct {
       display: none;
      background-color: #d4edda;
      color: #155724;
    }

    .feedback.wrong {
      display: none;
      background-color: #f8d7da;
      color: #721c24;
    }

    .hidden {
      display: none !important;
    }

    .btn {
      background-color: var(--color-primary);
      color: white;
      padding: 0.6rem 1.2rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn:hover {
      opacity: 0.9;
      transform: translateY(-2px);
    }

    .summary-stats {
      text-align: center;
      margin-bottom: 1rem;
    }

    .summary-score-percentage {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .review-item {
      background: var(--color-gray-50);
      padding: 0.8rem;
      border-radius: 8px;
      margin-bottom: 0.5rem;
    }

    .correct-answer {
      display: none;
      color: #28a745;
      font-weight: 600;
    }

    .your-answer {
      display: none;
      color: #dc3545;
      font-weight: 600;
    }

    @media (max-width: 600px) {
      .card {
        padding: 1.5rem;
      }
    }
  </style>
  <body>
    <!-- Mobile Menu Button -->


    <!-- Overlay -->
    <div class="overlay" id="overlay"></div>

    <!-- Main Container -->
    <div class="main-container">
      <%- include('../partial/nav_bar', { currentPage: 'Phrases' }) %>
        <!-- Main Content -->
        <main class="main-content">

          <%- include('../partial/header_nav_bar') %>
            <div id="quizContainer" class="card">
              <h2>Idioms MCQ Quiz</h2>

              <div class="progress-container">
                <div id="progress">Question 1 of ...</div>
              </div>

              <div class="score-indicator">
                <div class="score-box correct-score" id="correctCount">Correct: 0</div>
                <div class="score-box wrong-score" id="wrongCount">Wrong: 0</div>
              </div>

              <p class="word-display"><strong>Idiom:</strong> <span id="idiomWord"></span></p>

              <div id="quizContent">
                <div class="options-container" id="optionsContainer"></div>
                <div class="feedback" id="feedback"></div>
              </div>
            </div>
        </main>
    </div>
    <script>
const optionsContainer = document.getElementById('optionsContainer');
const feedbackDiv = document.getElementById('feedback');
const correctCountEl = document.getElementById('correctCount');
const wrongCountEl = document.getElementById('wrongCount');
const progressDiv = document.getElementById('progress');
const idiomWordEl = document.getElementById('idiomWord');

let currentAnswer = '';
let shownIdioms = [];
let answerResults = [];
let totalQuestions = 0;

async function loadQuestion() {
  try {
    const res = await fetch(`/idioms-mcq-json?shown=${JSON.stringify(shownIdioms)}`);
    const data = await res.json();

    if (data.finished) {
      showSummary();
      return;
    }

    if (totalQuestions === 0) totalQuestions = data.totalCount || 20;

    const currentIndex = shownIdioms.length + 1;
    progressDiv.textContent = `Question ${currentIndex} of ${totalQuestions}`;
    idiomWordEl.textContent = data.idiom;
    currentAnswer = data.answer;
    shownIdioms.push(data.id);

    feedbackDiv.style.display = 'none';

    optionsContainer.innerHTML = data.options.map(opt => `
      <div class="option" data-value="${opt}">
        <label>${opt}</label>
      </div>
    `).join('');

  } catch (err) {
    console.error('Error loading question:', err);
  }
}

optionsContainer.addEventListener('click', (e) => {
  const clicked = e.target.closest('.option');
  if (!clicked) return;

  const selectedValue = clicked.getAttribute('data-value');
  const isCorrect = selectedValue === currentAnswer;

  document.querySelectorAll('.option').forEach(opt => {
    opt.style.pointerEvents = 'none';
    if (opt.getAttribute('data-value') === currentAnswer) opt.classList.add('correct-option');
    if (opt === clicked && !isCorrect) opt.classList.add('wrong-option');
  });

  feedbackDiv.style.display = 'block';
  feedbackDiv.className = 'feedback ' + (isCorrect ? 'correct' : 'wrong');
  feedbackDiv.textContent = isCorrect ? '✅ Correct!' : `❌ Incorrect. Correct: ${currentAnswer}`;

  answerResults.push({
    idiom: idiomWordEl.textContent,
    correct: isCorrect,
    givenAnswer: selectedValue,
    correctAnswer: currentAnswer
  });

  const correctCount = answerResults.filter(r => r.correct).length;
  const wrongCount = answerResults.length - correctCount;
  correctCountEl.textContent = `Correct: ${correctCount}`;
  wrongCountEl.textContent = `Wrong: ${wrongCount}`;

  setTimeout(loadQuestion, 1500);
});

function showSummary() {
  const card = document.querySelector('.card');
  card.innerHTML = `
    <h2>Quiz Summary</h2>
    <div class="summary-stats">
      <div id="summaryScore" class="summary-score-percentage"></div>
      <div><span id="summaryCorrect" class="correct-score"></span> | <span id="summaryWrong" class="wrong-score"></span></div>
    </div>
    <div id="reviewList"></div>
    <div style="text-align:center;margin-top:1rem;">
      <button class="btn" onclick="location.reload()">Restart</button>
    </div>
  `;

  const totalCorrect = answerResults.filter(r => r.correct).length;
  const percentage = Math.round((totalCorrect / answerResults.length) * 100) || 0;

  document.getElementById('summaryScore').textContent = `${percentage}%`;
  document.getElementById('summaryCorrect').textContent = `${totalCorrect} Correct`;
  document.getElementById('summaryWrong').textContent = `${answerResults.length - totalCorrect} Wrong`;

  const reviewList = document.getElementById('reviewList');
  const incorrect = answerResults.filter(r => !r.correct);
  reviewList.innerHTML = incorrect.length === 0
    ? `<div style="text-align:center;color:#28a745;"><i class="fas fa-trophy"></i> Perfect Score!</div>`
    : incorrect.map(r => `
      <div class="review-item">
        <div><strong>Idiom:</strong> ${r.idiom}</div>
        <div>Your Answer: <span class="your-answer">${r.givenAnswer}</span></div>
        <div>Correct Answer: <span class="correct-answer">${r.correctAnswer}</span></div>
      </div>
    `).join('');
}

loadQuestion();
</script>
  </body>

  </html>