<%- include('../partial/html_header') %>

    <title>VocabiX - Squares and Cubes</title>
    <link rel="stylesheet" href="/home_page.css">
    <link rel="stylesheet" href="/nav_bar.css">
    </head>
    <style>
        .grid-container {
            display: flex;
            gap: 2rem;
            flex-wrap: wrap;
        }

    
        .grid-column {
            flex: 1;
            min-width: 250px;
            background: var(--color-white);
            padding: 1rem;
            margin: 1rem;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }


        h2 {
            margin-bottom: 1rem;
            color: var(--color-primary);
            font-weight: 600;
        }

        /* Tables */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table,
        th,
        td {
            border: 1px solid var(--color-gray-200);
        }

        th,
        td {
            padding: 0.5rem;
            text-align: center;
            font-weight: 500;
            color: var(--color-gray-700);
        }

        tr:nth-child(even) {
            background-color: var(--color-gray-100);
        }

        /* Squares & Cubes highlight */
        .squares-column td:nth-child(2) {
            color: blue;
            font-weight: 600;
            text-align: left;
        }

        .cubes-column td:nth-child(2) {
            color:rgb(0, 180, 0);
            font-weight: 600;
             text-align: left;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .grid-container {
                flex-direction: column;
            }
        }
    </style>

    <body>

        <div class="overlay" id="overlay"></div>


        <div class="main-container">
            <%- include('../partial/nav_bar', { currentPage: 'Squar' }) %>
                <!-- Main Content -->
                <main class="main-content">
                    <%- include('../partial/header_nav_bar') %>

                        <div class="grid-container">
                            <!-- Left Column: Squares -->
                            <div class="grid-column squares-column">
                                <h2>Squares (1-50)</h2>
                                <table id="squares-table">
                                    <tbody></tbody>
                                </table>
                            </div>

                            <!-- Right Column: Cubes -->
                            <div class="grid-column cubes-column">
                                <h2>Cubes (1-30)</h2>
                                <table id="cubes-table">
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                </main>


        </div>

        <script>
            // Squares table 1-50
            const squaresTableBody = document.querySelector('#squares-table tbody');
            for (let i = 1; i <= 50; i++) {
                const row = document.createElement('tr');
                const cellNum = document.createElement('td');
                const cellSquare = document.createElement('td');

                cellNum.textContent = i;
                cellSquare.textContent = i * i;

                row.appendChild(cellNum);
                row.appendChild(cellSquare);
                squaresTableBody.appendChild(row);
            }

            // Cubes table 1-30
            const cubesTableBody = document.querySelector('#cubes-table tbody');
            for (let i = 1; i <= 30; i++) {
                const row = document.createElement('tr');
                const cellNum = document.createElement('td');
                const cellCube = document.createElement('td');

                cellNum.textContent = i;
                cellCube.textContent = i * i * i;

                row.appendChild(cellNum);
                row.appendChild(cellCube);
                cubesTableBody.appendChild(row);
            }
        </script>


    </body>

    </html>