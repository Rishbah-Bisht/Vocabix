<!-- profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
.profile-container {
    max-width: 500px;
    margin: 3rem auto;
    padding: 2rem;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    text-align: center;
}

.profile-container h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: #673ab7; /* Accent color */
}

.profile-container .profile {
    display: inline-block;
    width: 120px;
    height: 120px;
    border: 3px solid #673ab7;
    border-radius: 50%;
    overflow: hidden;
    background-color: #f5f5f5;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease, border-color 0.3s ease;
}

.profile-container .profile img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
}

.profile-container .profile:hover {
    transform: scale(1.05);
    border-color: #4527a0; /* Darker accent on hover */
}

.profile-container p {
    font-size: 1.1rem;
    margin: 0.5rem 0;
    color: #333;
}

.profile-container p strong {
    color: #673ab7; /* Accent for labels */
}

@media (max-width: 768px) {
    .profile-container {
        margin: 2rem 1rem;
        padding: 1.5rem;
    }

    .profile-container .profile {
        width: 90px;
        height: 90px;
    }

    .profile-container h2 {
        font-size: 1.6rem;
    }

    .profile-container p {
        font-size: 1rem;
    }
}

    </style>
</head>
<body>
    <%- include('../partial/nav_bar',{ currentPage: '' }) %>

    <div class="profile-container">
        <h2>Profile</h2>
       <a href="/profile" class="profile">
            <img src="/uploads/Profile/Profile.png" alt="Profile">
        </a>
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Number:</strong> <%= user.number %></p>
        <p><strong>ID:</strong> <%= user._id %></p>
    </div>
</body>
</html>
