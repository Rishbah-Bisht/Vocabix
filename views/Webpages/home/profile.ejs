<%- include('../partial/html_header') %>

<title>VocabiX - Profile</title>
<link rel="stylesheet" href="/home_page.css">
<link rel="stylesheet" href="/nav_bar.css">
<style>
:root {
  --card-bg: #fafafad1;
  --primary-shadow: 0 4px 16px rgba(30,224,224,0.09);
  --avatar-shadow: 0 6px 24px rgba(76, 28, 134, 0.12);
  --label-color: #8B5CF6;
  --gradient: linear-gradient(135deg, #483c72 0%, #454747 100%);
}



.profile-container {
  max-width: 500px;
  margin: 3.5rem auto;
  padding: 2.25rem 2rem 2.5rem 2rem;
  background: var(--card-bg);

  text-align: center;
  position: relative;
}
.profile-container::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 18px;
  z-index: 0;
  pointer-events: none;

  opacity: 0.08;
}

.profile-header {
  font-size: 2.15rem;
  font-weight: 700;
  margin-bottom: 1.4rem;
  background: var(--gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.profile-avatar {
  display: inline-block;
  width: 120px;
  height: 120px;
  border-radius: 50%;
  box-shadow: var(--avatar-shadow);
  border: 4px solid #383839;
  overflow: hidden;
  background: #f4f7fa;
  margin-bottom: 1rem;
  transition: transform 0.36s cubic-bezier(.4,0,.2,1), border-color 0.36s cubic-bezier(.4,0,.2,1);
}
.profile-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
}
.profile-avatar:hover {
  transform: scale(1.07);
  border-color: #29292a;
}
.profile-info {
  margin-top: 1.5rem;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 0.92rem;
}
.profile-info__label {
  font-size: 1.05rem;
  color: var(--label-color);
  font-weight: 600;
  margin-right: 0.4rem;
  vertical-align: middle;
}
.profile-info__data {
  color: #22223b;
  font-size: 1.08rem;
  font-weight: 500;
}
@media (max-width: 600px) {
  .profile-container { padding: 1.1rem 0.5rem 1.5rem 0.5rem; }
  .profile-header { font-size: 1.35rem; }
  .profile-avatar { width: 83px; height: 83px; }
  .profile-info__data { font-size: 0.98rem; }
}
</style>
<body>
  <!-- Overlay for mobile nav etc. -->
  <div class="overlay" id="overlay"></div>
  <div class="main-container">
    <%- include('../partial/nav_bar', { currentPage: 'profile' }) %>
      <main class="main-content">
        <%- include('../partial/header_nav_bar') %>
        <div class="profile-container">
            <div class="profile-header">Profile</div>
            <div class="profile-avatar">
                <img src="/uploads/Profile/Profile.png" alt="Profile">
            </div>
            <div class="profile-info">
                <div>
                  <span class="profile-info__label"><i class="fa fa-user"></i> Name:</span>
                  <span class="profile-info__data"><%= user.name %></span>
                </div>
                <div>
                  <span class="profile-info__label"><i class="fa fa-phone"></i> Number:</span>
                  <span class="profile-info__data"><%= user.number %></span>
                </div>
                <div>
                  <span class="profile-info__label"><i class="fa fa-id-badge"></i> ID:</span>
                  <span class="profile-info__data"><%= user._id %></span>
                </div>
            </div>
        </div>
      </main>
  </div>
</body>
</html>
