    <style>
        /* Dashboard Container */
        .dashboard {
            padding: 2rem;
            background: var(--color-gray-50);
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
        }

        /* Header */
        .dashboard header h1 {
            font-size: 2rem;
            font-weight: 700;
            color: var(--color-primary);
            margin-bottom: 2rem;
            text-align: left;
        }

        /* Options Grid */
        .options-grid {
            display: grid;
            max-width: 1300px;
            grid-template-columns: repeat(3, minmax(300px, 1fr));

            gap: 2rem;
            max-width: 1300px;
            margin: 0 auto;
        }

        /* Card */
        .option-card {
            background: var(--color-white);
            border: 1px solid var(--color-gray-100);
            border-radius: var(--radius-3xl);
            box-shadow: var(--shadow-xl);
            padding: 1.5rem;
            display: flex;
            text-decoration: none;
            flex-direction: column;
            gap: 1.25rem;
            transition: all var(--transition-normal) ease;
        }

        .option-card:hover {
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            transform: translateY(-3px);
        }

        /* Card Icon */
        .option-card .icon {
            width: 64px;
            height: 64px;
            border-radius: 1rem;
            display: flex;
            color: black;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .option-card .icon svg {
            width: 32px;
            color: black;
            height: 32px;
        }

        /* Icon Glow Variants */
        .icon-cyan {
            background-color: var(--color-glow-cyan);
            box-shadow: 0 0 20px 10px var(--color-glow-cyan);
        }

        .icon-cyan svg {
            color: red;
        }

        .icon-green {
            color: white;
            background-color: var(--color-glow-green);
            box-shadow: 0 0 20px 10px var(--color-glow-green);
        }

        .icon-green svg {
            color: var(--color-green);
        }

        .icon-blue {
            background-color: var(--color-glow-blue);
            box-shadow: 0 0 20px 10px var(--color-glow-blue);
        }

        .icon-blue svg {
            color: var(--color-blue);
        }

        /* Card Title */
        .option-card .option-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--color-gray-900);
            text-align: left;
        }

        /* Card Button */
        .option-card .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.5rem 0.8rem;
            border-radius: 0.6rem;
            font-size: 0.9rem;
            font-weight: 500;
            color: black;
            color: var(--color-white);
            transition: all 0.3s ease;
        }



        /* Responsive */
        @media (max-width: 640px) {
            .options-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

